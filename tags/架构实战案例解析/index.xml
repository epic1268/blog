      <guid>https://politcloud.org/post/%E6%9E%81%E5%AE%A2%E6%97%B6%E9%97%B4/%E6%9E%B6%E6%9E%84%E5%AE%9E%E6%88%98%E6%A1%88%E4%BE%8B%E8%A7%A3%E6%9E%90/02__%E4%B8%9A%E5%8A%A1%E6%9E%B6%E6%9E%84%E4%BD%9C%E4%B8%BA%E5%BC%80%E5%8F%91%E4%BD%A0%E7%9C%9F%E7%9A%84%E4%BA%86%E8%A7%A3%E4%B8%9A%E5%8A%A1%E5%90%97/</guid>
